{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                
                // -I and -L paths are GONE!
                
                // You STILL need to link the libraries
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                
                // Optional: Hides the console
                "-mwindows"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}